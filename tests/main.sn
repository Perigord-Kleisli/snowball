use Core::CLib

class Parent {
    pub:
        let mut a: char;
        Parent() {
            self.a = '4';
        }

        virt fn test() {
            CLib::putchar('P');
        }
}

class Child : Parent {
    pub:
        Child() : super() {
            self.a = 'X';
        }

        virt fn test() {
            CLib::putchar('C');
        }
}

pub fn main() i32 {
    let p: Parent* = new Parent();
    let mut c = new Child();

    CLib::putchar(c.a);
    CLib::putchar(p.a);

    p.test();
    c.test();
}