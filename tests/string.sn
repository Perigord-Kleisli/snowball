import Core::System;
import[[use_macros]] Core::CLib;

namespace tests {

func [[test]] empty() i32 {
    let s = new String();
    return s.size() == 0;
}

func [[test(expect = 5)]] size_char() i32 {
    let s = String::from(@c_str("hello"), 5);
    return s.size();
}

func [[test]] equals() i32 {
    let s = "hello";
    return s == "hello";
}

func [[test]] not_equals() i32 {
    let s = "hello"
    return s != "world";
}

func [[test]] concat() i32 {
    let mut s = "hello";
    s = s + " world";
    return s == "hello world";
}

}
