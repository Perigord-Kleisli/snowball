use Core::System;
use [[use_macros]] Core::CLib;

namespace tests {

fn [[test]] empty() i32 {
    let s = new String();
    return s.size() == 0;
}

fn [[test(expect = 5)]] size_char() i32 {
    let s = new String(@c_str("hello"));
    return s.size();
}

fn [[test]] equals() i32 {
    let s = new String(@c_str("hello"));
    return s == "hello".to_string();
}

fn [[test]] not_equals() i32 {
    let s = new String(@c_str("hello"));
    return s != "world".to_string();
}

fn [[test]] concat() i32 {
    let mut s = new String(@c_str("hello"));
    s = s + @c_str(" world");
    return s == "hello world".to_string();
}

}
